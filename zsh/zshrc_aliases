alias bzx='tar -xvjf'

# Pacman (Arch Linux)
alias P='pacaur'
alias PY='pacaur -Syy'
alias PU='pacaur -Syu'
alias PAY='sudo pacman -Syy'
alias PAU='sudo pacman -Syu'

# APT (Debian)
alias A="sudo apt-get"
alias AI="sudo apt-get install"
alias AU="sudo apt-get update"
alias AG="sudo apt-get upgrade"
alias AUY="sudo apt-get update -y"
alias ADY="sudo apt-get upgrade -y"

# Default to human readable figures
